clc;clf;clear;
j=input (" no. of experiment")
for  i=1:j
  N= input (" No. of coins ") //no of steps
  total_microstates = 2^N;
  for n=0:1:N
      prob= factorial(N)/(factorial(n)*factorial(N-n));
      H(n+1)=n;
      p(n+1)=(prob/total_microstates);
      disp(H(n+1),p(n+1));
  end
  subplot (2,2,i)
  plot(H,p,'b-o','linewidth',2)
  bar (H,p, width=0.5 )
  xlabel(' No. of Heads','fontsize',3)
  ylabel ('probability','fontsize',3)
  legend(" N=" + string(n))
  end
